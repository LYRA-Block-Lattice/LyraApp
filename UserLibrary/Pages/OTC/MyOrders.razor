@page "/otc/myorders"
@using Fluxor
@using Nebula.Store.WebWalletUseCase
@inherits PageWithContextMenu

<div class="mag cet">
    @if (walletState.Value.wallet == null)
    {
        <a href="/wallet">@localizer["Open wallet to view orders."]</a>
    }
    else
    {
        <h3>@localizer["All my OTC orders"]</h3>
        <UserLibrary.Components.OTC.OrdersList />
    }
</div>

@code {
    [Inject]
    private IState<WebWalletState> walletState { get; set; }
    [Inject] IStringLocalizer<MyOrders>? localizer { get; set; }

    protected override void OnInitialized()
    {
        _title = localizer["My OTC Orders"];
        base.OnInitialized();
    }
}
