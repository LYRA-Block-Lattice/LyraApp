@page "/start"
@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration

<iframe width="100%" height="100%" src="@getStartUrl()" frameborder="0" allowfullscreen></iframe>


@code {
    string getStartUrl()
    {
        if (Configuration["network"] == "mainnet")
        {
            return "https://start.lyra.live";
        }
        else if (Configuration["network"] == "testnet")
            return "https://starttestnet.lyra.live";
        else
            return "https://localhost:7288/";
    }
}
