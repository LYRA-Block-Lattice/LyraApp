@namespace UserLibrary.Components
@inject IJSRuntime JSRuntime

<span style="width: 100%; display:inline;">
    <input class="copy-item" readonly type="text" value="@Text" />
    @* <MudButton Variant="Variant.Filled" Color="Color.Primary" @onclick="CopyTextToClipboard">Copy</MudButton> *@
    <span class="copy" style="cursor: pointer;">
        <MudIcon @onclick="CopyTextToClipboard" icon="@Icons.Filled.ContentCopy" Size="Size.Small"/>
    </span>
</span>

@code {    
    [Parameter] public string Text { get; set; }

    private async Task CopyTextToClipboard()
    {
        await JSRuntime.InvokeVoidAsync("clipboardCopy.copyText", Text);
    }
}